@using VehicleRegistration.Models
@model List<LTOStatusReportTableModel>

<!-- Main content -->
<table id="tbl_rprt_list" class="table table-bordered table-striped table-hover" style="width:100%; table-layout:auto;">
    <thead>
        <tr>
            <th style="width:20%">Branch Name</th>
            <th style="width:16%">Submitted</th>
            <th style="width:16%">Assessment</th>
            <th style="width:16%">Paid</th>
            <th style="width:16%">Completed</th>
            <th style="width:16%">Total</th>
        </tr>
    </thead>
    <tbody id="vehiclelist_tbody">
        @for (int i = 0; i < Model.Count(); i++)
        {
            <tr>
                <td style="width:20%">
                    @Html.DisplayFor(o => Model[i].DealerBranchName)
                </td>
                <td style="width:16%">
                    <a href="javascript:void(0);" onclick="BatchList('@Model[i].DealerID', '@Model[i].DealerBranchID','Submitted' ,'Submitted', '@Model[i].DealerName', '@Model[i].DealerBranchName');">
                        @Html.DisplayFor(o => Model[i].TotalSubmitted)
                    </a>
                </td>
                <td style="width: 16%">
                    <a href="javascript:void(0);" onclick="BatchList('@Model[i].DealerID', '@Model[i].DealerBranchID','Assessment' ,'Assessment', '@Model[i].DealerName', '@Model[i].DealerBranchName');">
                        @Html.DisplayFor(o => Model[i].TotalAssessment)
                    </a>
                </td>
                <td style="width:16%">
                    <a href="javascript:void(0);" onclick="BatchList('@Model[i].DealerID', '@Model[i].DealerBranchID','Paid' ,'Paid', '@Model[i].DealerName', '@Model[i].DealerBranchName');">
                        @Html.DisplayFor(o => Model[i].TotalPaid)
                    </a>
                </td>
                <td style="width:16%">
                    <a href="javascript:void(0);" onclick="BatchList('@Model[i].DealerID', '@Model[i].DealerBranchID','Completed' ,'Completed', '@Model[i].DealerName', '@Model[i].DealerBranchName');">
                        @Html.DisplayFor(o => Model[i].TotalCompleted)
                    </a>
                </td>
                <td style="width:16%">
                    @Html.DisplayFor(o => Model[i].TotalActive)
                </td>
            </tr>
        }
    </tbody>
</table>
<style>
    td {
        font-size: 14px;
    }
</style>