@using VehicleRegistration.Models
@model MAIModel
@{
    ViewBag.Title = "MAI_Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Main content -->
<section class="content">
    <div class="card">
        <div class="card-header">
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-toggle="tooltip" title="Back" onclick="location.href='@Url.Action("Index", "MAI")'">
                    <i class="far fa-times-circle"></i>
                    @*<i class="far fa-times-circle"></i>*@
                </button>
            </div>
            <h6><i class="nav-icon fas fa-paste"></i> MAI Registration Form   <small></small></h6>
        </div>
        <!-- /.card-header -->

        <article class="card-body mx-auto">

