                    </div> <!-- form-group// -->
                    <div class="form-group col-lg-4">
                        @Html.LabelFor(m => m.TIN)
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"> <i class="fa fa-fax"></i> </span>
                            </div>
                            @Html.TextBoxFor(m => m.TIN,
                           new
                           {
                               placeholder = "TIN",
                               @class = "form-control"
                           })
                        </div>
                        @Html.ValidationMessageFor(m => m.TIN, "", new { @class = "" })
                    </div> <!-- form-group// -->
                    <div class="form-group col-12">
                        @Html.LabelFor(m => m.Address)
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"> <i class="fa fa-map-marked-alt"></i> </span>
                            </div>
                            @Html.TextBoxFor(m => m.Address,
                           new
                           {
                               placeholder = "Address",
                               @class = "form-control"
                           })
                        </div>
                        @Html.ValidationMessageFor(m => m.Address, "", new { @class = "" })
                    </div> <!-- form-group// -->
                    <div class="form-group col-lg-4">
                        @Html.LabelFor(m => m.SelectedProvinceID)
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"> <i class="fa fa-building"></i> </span>
                            </div>
                            @Html.DropDownListFor(m => m.SelectedProvinceID,
                           new SelectList(Model.ProvinceList, "ProvinceID", "ProvinceName"), "Select Province", new { @class = "form-control select2" })
                        </div>
