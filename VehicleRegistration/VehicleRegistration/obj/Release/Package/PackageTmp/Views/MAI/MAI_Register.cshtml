                               @class = "form-control"
                           })
                        </div>
                        @Html.ValidationMessageFor(m => m.MAIName, "", new { @class = "" })
                    </div>
                    <!-- form-group// -->
                    <div class="form-group col-lg-4">
                        @Html.LabelFor(m => m.EmailAddress)
