
@using VehicleRegistration.Models
@model IEnumerable<VehicleBodyType>

@{
    ViewBag.Title = "VehicleBodyTypeList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h6><i class="nav-icon far fas fa-users"></i> Vehicle Body Maintenance   <small></small></h6>
                </div>
                <div class="fab" type="button" name="btnSubmit" data-toggle="tooltip" title="Create New" onclick="location.href='@Url.Action("VehicleBody", "VehicleInfo")'"> + </div>
                <div class="card-body">
                    <table id="Vehicle_Body_list_tbl" class="table table-bordered table-striped table-hover" style="max-width:99.7%; width:99.7%;">
                        <thead>
                            <tr>
                                <th style="width:75px;">Code</th>
                                <th style="width:200px;">Name</th>
                                <th style="width:150px;">Abbrevation</th>
                                <th style="width:100px;">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td style="max-width:75px; " id="title_code">@item.VehicleBodyTypeID</td>
                                    <td style="max-width:250px; " id="title_name">@item.VehicleBodyTypeName</td>
                                    <td style="max-width:150px; " id="title_abbr">@item.VehicleBodyAbbr</td>
                                    <td style="max-width:100px; padding-left:5px; padding-right:5px; margin:auto;" align="center">
                                        <div class="row justify-content-center">
                                            <a href="@Url.Action("VehicleBody", new { id = item.VehicleBodyTypeID})" >
                                                <i class="fa fa-edit"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<script>
    $("#left_nav_dbinc").toggleClass("menu-open");
    $("#vehiclebody").toggleClass("active");
    ///// automatic open navbar after login ///////
    $("#left_nav_dbinc").toggleClass("menu-open");
    $("#left_nav_admin_insurance").toggleClass("menu-open");
    $("#left_nav_dlr").toggleClass("menu-open");
    $("#left_nav_mai").toggleClass("menu-open");
    ///// end automatic open navbar after login ///////
</script>




