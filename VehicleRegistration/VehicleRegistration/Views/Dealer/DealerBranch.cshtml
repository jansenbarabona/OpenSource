@using VehicleRegistration.Models
@model IEnumerable<vwDealerBranchList>

@{
    ViewBag.Title = "Dealer Branch";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">

                    <h6><i class="nav-icon fas fa-project-diagram"></i> Branch List  <small> </small></h6>
                    <div class="btn-group btn-group-toggle" data-toggle="buttons">
                        @*<input type="button" class="btn btn-info btn-block" name="btnSubmit" value="Create New" onclick="location.href='@Url.Action("DealerBranchForm", "Dealer")'" />*@

                        </div>
                    </div>
                <!-- /.card-header -->
                <div class="fab" type="button" name="btnSubmit" data-toggle="tooltip" title="Create New" onclick="location.href='@Url.Action("DealerBranchForm", "Dealer")'"> + </div>
                <div class="card-body">
                    <table id="Dealer_branch_list_tbl" class="table table-bordered table-striped table-hover" style="max-width:100%;">
                        <thead>
                            <tr>
                                <th style="width:75px;">Code</th>
                                <th style="width:250px;">Name</th>
                                <th style="width:250px;">Dealer Name</th>
                                <th style="width:200px;">Email</th>
                                <th style="width:140px;">Business Phone</th>
                                <th style="width:125px;">Mobile Phone</th>
                                <th style="width:125px;">Fax Number</th>
                                <th style="width:200px;">Website</th>
                                <th style="width:300px;">Address</th>
                                <th style="width:100px;">City</th>
                                <th style="width:75px;">ZipCode</th>
                                <th style="width:150px;">Accreditation</th>
                                <th style="width:50px;">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td style="max-width:75px;" id="dealer_branch_code">@item.DealerBranchID</td>
                                    <td style="max-width:250px;" id="dealer_branch_name">@item.DealerBranchName</td>
                                    <td style="max-width:200px;" id="dealer_branch_dealer_name">@item.DealerName</td>
                                    <td style="max-width:200px;" id="dealer_branch_email">@item.EmailAddress</td>
                                    <td style="max-width:130px;" id="dealer_branch_bphone">@item.BusinessPhone</td>
                                    <td style="max-width:125px;" id="dealer_branch_mphone">@item.MobilePhone</td>
                                    <td style="max-width:125px;" id="dealer_branch_fax">@item.FaxNumber</td>
                                    <td style="max-width:200px;" id="dealer_branch_web">@item.WebSite</td>
                                    <td style="max-width:300px;" id="dealer_branch_address">@item.Address</td>
                                    <td style="max-width:100px;" id="dealer_branch_city">@item.CityName</td>
                                    <td style="max-width:75px;" id="dealer_branch_zipcode">@item.ZipCode</td>
                                    <td style="max-width:75px;" id="dealer_branch_zipcode">@item.AccreditationNumber</td>
                                    <td style="max-width:50px;">
                                        <div class="row" style="align-items:center">
                                            <a href="@Url.Action("DealerBranchForm", new { id = item.DealerBranchID })">
                                                <i class="fa fa-edit"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
<!-- ./wrapper -->
<script>
    $("#left_nav_dlr").toggleClass("menu-open");
    $("#left_nav_dlr_dealer_branch").toggleClass("active");
    ///// automatic open navbar after login ///////
    $("#left_nav_dbinc").toggleClass("menu-open");
    $("#left_nav_admin_insurance").toggleClass("menu-open");
    $("#left_nav_dlr").toggleClass("menu-open");
    $("#left_nav_mai").toggleClass("menu-open");
    ///// end automatic open navbar after login ///////
</script>


