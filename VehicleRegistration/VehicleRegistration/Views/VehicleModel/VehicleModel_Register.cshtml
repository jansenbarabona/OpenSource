@using VehicleRegistration.Models
@model VehicleModelModel

@{
    ViewBag.Title = "VehicleModel_Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Main content -->
<section class="content">
    <div class="card">
        <div class="card-header">
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-toggle="tooltip" title="Back" onclick="location.href='@Url.Action("Index", "VehicleModel")'">
                    <i class="far fa-times-circle"></i>
                    @*<i class="far fa-times-circle"></i>*@
                </button>
            </div>
            <h6><i class="nav-icon fas fa-car"></i> Vehicle Model Registration Form   <small></small></h6>
        </div>
        <!-- /.card-header -->
        <article class="card-body mx-auto">
            @using (Html.BeginForm("VehicleModel_Register", "VehicleModel", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.VehicleModelID)
            <div class="row">
                <div class="form-group col-lg-4">
                    @Html.LabelFor(m => m.SelectedVehicleMakeID)
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fa fa-building"></i> </span>
                        </div>
                        @Html.DropDownListFor(m => m.SelectedVehicleMakeID,
           new SelectList(Model.VehicleMakeList, "VehicleMakeID", "VehicleMakeName"), "Select Vehicle Make", new { @class = "form-control select2" })
                    </div>
                    @Html.ValidationMessageFor(m => m.SelectedVehicleMakeID, "", new { @class = "" })
                </div>
                <!--Email-->
                <div class="form-group col-lg-4">
                    @Html.LabelFor(m => m.VehicleModelName)
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
                        </div>
                        @Html.TextBoxFor(m => m.VehicleModelName, new { placeholder = "Model Name", @class = "form-control", type = "brand" })
                    </div>
                </div> <!-- form-group// -->
                <!--First name-->
                <div class="form-group col-lg-4">
                    @Html.LabelFor(m => m.Variant)
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fas fa-id-card"></i> </span>
                        </div>
                        @Html.TextBoxFor(m => m.Variant, new { placeholder = "Variant", @class = "form-control", type = "variant" })
                    </div>
                </div> <!-- form-group// -->
                <!--Last name-->
                <div class="form-group col-lg-4">
                    @Html.LabelFor(m => m.YearOfMake)
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fa fa-id-card"></i> </span>
                        </div>
                        @Html.TextBoxFor(m => m.YearOfMake, new { placeholder = "Year of Make", @class = "form-control", type = "yearofmake" })
                    </div>
                </div> <!-- form-group// -->
                <div class="form-group col-lg-4">
                    @Html.LabelFor(m => m.VehicleClassificationID)
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fa fa-building"></i> </span>
                        </div>
                        @Html.DropDownListFor(m => m.VehicleClassificationID,
           new SelectList(Model.VehicleClassificationList, "VehicleClassificationID", "VehicleClassificationName"), "Select Vehicle Make", new { @class = "form-control select2" })
                    </div>
                    @Html.ValidationMessageFor(m => m.VehicleClassificationID, "", new { @class = "" })
                </div>

            </div>


                if (ViewBag.Edit == false)
                {
                    <center>
                        <div class="form-group">
                            <center>
                                <button type="submit" name="submit" value="Create" class="btn btn-primary btn-block" style="width:250px;"> Create </button>
                            </center>
                        </div>
                    </center>
                }
                else
                {
                    <center>
                        <div class="form-group row">
                            <button type="button" data-toggle="modal" data-target="#modal-delete" class="btn btn-danger btn-block col-xs-12 col-sm-12 col-md-4 col-lg-4" style="width:250px;"> Delete </button>
                            <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4"></div>
                            <button type="button" data-toggle="modal" data-target="#modal-save" class="btn btn-success btn-block col-xs-12 col-sm-12 col-md-4 col-lg-4" style="width:250px;"> Save </button>
                        </div>
                    </center>
                }

                @Html.Partial("_Confirmation")
            }
        </article>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</section>
<script type="text/javascript">
    $("#left_nav_dbinc").toggleClass("menu-open");
    $("#left_nav_ul_vehicle").css("display", "block");
    $("#vehicle_model").toggleClass("active");
    ///// automatic open navbar after login ///////
    $("#left_nav_dbinc").toggleClass("menu-open");
    $("#left_nav_admin_insurance").toggleClass("menu-open");
    $("#left_nav_dlr").toggleClass("menu-open");
    $("#left_nav_mai").toggleClass("menu-open");
    ///// end automatic open navbar after login ///////
    $("#myaccount").on("click", function () {
        $(this).dropdown("toggle");
    });
</script>
<!-- /.content -->
