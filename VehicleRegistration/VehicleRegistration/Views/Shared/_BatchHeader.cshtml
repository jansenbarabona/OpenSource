@using VehicleRegistration.Models
@using VehicleRegistration.Tools
@model BatchHeaderModel

<div class="card">
    <div class="card-header">
        <h6>Batch Header</h6>
    </div>
    <div class="card-body">
        <div class="row" style="text-align:center">
            <div class="form-group col-lg-6">
                @Html.LabelFor(m => m.ReferenceNo)
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-barcode"></i> </span>
                    </div>
                    @Html.TextBoxFor(m => m.ReferenceNo,
                   new
                   {
                       placeholder = "Reference Number",
                       @class = "form-control"
                   })
                </div>
                @Html.ValidationMessageFor(m => m.ReferenceNo, "", new { @class = "" })
            </div>

            <div class="form-group col-lg-6">
                @Html.LabelFor(m => m.BatchDescription)
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-keyboard"></i> </span>
                    </div>
                    @Html.TextBoxFor(m => m.BatchDescription,
                   new
                   {
                       placeholder = "Desciption...",
                       @class = "form-control"
                   })
                </div>
                @Html.ValidationMessageFor(m => m.BatchDescription, "", new { @class = "" })
            </div>
        </div>
    </div>
</div>